@{
    ViewData["Title"] = "Service Calculator";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Include Bootstrap CSS from a CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">@ViewData["Title"]</h1>

        <!-- Form for Calculation with Bootstrap styling -->
        <form id="serviceCalculator" class="mb-3">
            <div class="form-group">
                <label for="hours">Number of Hours:</label>
                <input type="number" id="hours" name="hours" class="form-control" min="1" required>
            </div>

            <div class="form-group">
                <label for="rate">Hourly Rate:</label>
                <input type="text" id="rate" class="form-control" value="500" readonly>
            </div>

            <button type="button" class="btn btn-primary" onclick="calculateTotal()">Calculate Total</button>

            <div class="form-group mt-3">
                <label for="total">Total Cost:</label>
                <input type="text" id="total" class="form-control" readonly>
			</div>
            <img src="~/img_4038.jpeg" height="900" />

        </form>

        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="~/js/calculator.js"></script>
    }
</body>
</html>
